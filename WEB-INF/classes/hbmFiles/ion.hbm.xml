<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.callippus.web.beans.letterNumberFormat.IONDTO" table="ION_MASTER">
		<id name="id" column="ID">
			<generator class="sequence">
				<param name="sequence">ION_MASTER_SEQ</param>
			</generator>
		</id>
		<property name="letterNumber" column="LETTER_NUMBER" />
		<property name="letterFormatId" column="LETTER_FORMAT_ID" />
		<property name="ionDate" column="ION_DATE" />
		<property name="delegation" column="DELEGATION" />
		<property name="subject" column="SUBJECT" />
		<property name="reference" column="REFERENCE" />
		<property name="content" column="CONTENT" />
		<property name="ionInitiatedSfid" column="INITIATED_BY" />
		<property name="ionInitiatedRoleId" column="INITIATED_ROLE_ID" />
		<property name="ionForwardSfid" column="FORWARD_BY" />
		<property name="ionForwardRoleId" column="FORWARD_ROLE_ID" />
		<property name="ionApprovedSfid" column="APPROVED_BY" />
		<property name="ionApprovedRoleId" column="APPROVED_ROLE_ID" />
		<property name="enclosers" column="ENCLOSERS" />
		<property name="publicStatus" column="PUBLIC_STATUS" />
		
		<property name="status" column="status" />
		<property name="circulationStatus" column="circulation_status" />
		<property name="creationDate" column="creation_Date" update="false"/>
		<property name="createdBy" column="created_by" update="false"/>
		<property name="lastModifiedDate" column="last_modified_date" />
		<property name="lastModifiedBy" column="last_modified_by" />


	</class>
</hibernate-mapping>
