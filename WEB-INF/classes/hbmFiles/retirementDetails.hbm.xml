<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.callippus.web.beans.retirement.RetirementBean" table="retirement_details">
		<id name="id" column="id"></id>
		<property name="sfid" column="sfid" />
		<property name="idNo" column="idno" />
		<property name="status" column="status" />
		<property name="retirementType" column="retirement_type_id" />
		<property name="retirementDate" column="retirement_date" />
		<property name="referenceNumber" column="reference_number" />
		<property name="creationDate" column="creation_date" update="false"/>
		<property name="lastModifiedDate" column="last_modified_date" />
	</class>
</hibernate-mapping>