<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.callippus.web.beans.dto.ReligionDTO" table="religion_master">
		<id name="id" column="id">
			<generator class="sequence">
				<param name="sequence">RELIGION_MASTER_SEQ</param>
			</generator>
		</id>
		<property name="name" column="name" />
		<property name="status" column="status" />
		<property name="description" column="description" />
		<property name="creationDate" column="creation_date" update="false"/>
		<property name="lastModifiedDate" column="last_modified_date" />
		<property name="religion" column="minority_flag" />
	</class>
</hibernate-mapping>