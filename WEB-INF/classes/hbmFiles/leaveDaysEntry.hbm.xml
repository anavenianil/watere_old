<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.callippus.web.leave.dto.LeavesDaysMasterDTO" table="ERP_LEAVEDAYS_MASTER">
		<id name="id" column="id">
			<generator class="sequence">
				<param name="sequence">ERPLEAVE_DETAILS_SEQ</param>
			</generator>
		</id>
		<property name="leaveType" column="LEAVE_TYPE" />
		<property name="permanent" column="PERMANENT_EMP" />
		
		<property name="contract" column="CONTRACT_EMP" />
		<property name="gender" column="APPLICABLE_GENDER" />
		
		<property name="status" column="STATUS" />
		<property name="year" column="YEAR" />
	</class>
</hibernate-mapping>